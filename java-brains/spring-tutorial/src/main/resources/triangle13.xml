<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN" "http://www.springframework.org/dtd/spring-beans-2.0.dtd">

<beans>
	<bean id="parenttriangle" class="com.lexx.tutorials.javabrains.spring.spring13.bean_definition_inheritance.Triangle">
		<property name="pointA" ref="pointA" />
	</bean>
	
	<bean id="triangle1" class="com.lexx.tutorials.javabrains.spring.spring13.bean_definition_inheritance.Triangle" parent="parenttriangle">
		<property name="pointB" ref="pointB" />
		<property name="pointC" ref="pointC" />
	</bean> 
	
	<bean id="triangle2" class="com.lexx.tutorials.javabrains.spring.spring13.bean_definition_inheritance.Triangle" parent="parenttriangle">
		<property name="pointB" ref="pointB" />
	</bean>	 
	
	<bean id="pointA" class="com.lexx.tutorials.javabrains.spring.spring13.bean_definition_inheritance.Point">
		<property name="x" value="0" />
		<property name="y" value="0" />
	</bean>
	<bean id="pointB" class="com.lexx.tutorials.javabrains.spring.spring13.bean_definition_inheritance.Point">
		<property name="x" value="-20" />
		<property name="y" value="0" />
	</bean>
	<bean id="pointC" class="com.lexx.tutorials.javabrains.spring.spring13.bean_definition_inheritance.Point">
		<property name="x" value="0" />
		<property name="y" value="20" />
	</bean>
	
</beans>

